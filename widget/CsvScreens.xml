				<container>
					<label style="h2" text="${uiLabelMap.ClientBuyGroup}" />
				</container>
				<include-form name="ClientBuyGroupExport" location="component://borAgency/widget/CsvForms.xml" />
				<container>
					<label style="h2" text="${uiLabelMap.ClientPayCond}" />
